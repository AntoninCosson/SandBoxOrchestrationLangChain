# ========================================
# BruitsSourds Backend - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins
CORS_WHITELIST=http://localhost:3000,http://localhost:5173

# ========================================
# Admin Configuration
# ========================================
ADMIN_EMAIL=admin@example.com

# ========================================
# MongoDB Database
# ========================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# Or MongoDB Atlas: mongodb+srv://...
CONNECTION_STRING=mongodb://localhost:27017/bruitssourds

# ========================================
# JWT Authentication
# ========================================
# CRITICAL: Use strong random strings (128+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_SECRET=YOUR_128_CHAR_SECRET_HERE
JWT_REFRESH_SECRET=YOUR_128_CHAR_REFRESH_SECRET_HERE

# ========================================
# Stripe Payment
# ========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# ========================================
# Frontend URL
# ========================================
# Your frontend application URL
FRONT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ========================================
# Email (SMTP)
# ========================================
# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
SMTP_FROM=noreply@bruitssourds.com

# ========================================
# OpenAI API (for MCP agent)
# ========================================
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE

# ========================================
# OKAPI (Shipping Address Validation)
# ========================================
# Get from: https://okapi.laposte.fr
OKAPI_CONTROL_BASE=https://api.laposte.fr/controladresse
OKAPI_CONTROL_KEY=YOUR_OKAPI_KEY_HERE

# ========================================
# Environment
# ========================================
# Set to 'production' for production server
NODE_ENV=development

# ========================================
# Server Configuration (Optional)
# ========================================
PORT=3000
